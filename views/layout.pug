doctype html
html(lang='en')

  head
    title= title
    link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(href='https://fonts.googleapis.com/css?family=Lato:400,700', rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css', rel='stylesheet', integrity='sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1', crossorigin='anonymous')
    !=css("main")

  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a#brand.navbar-brand(href='#')
            i#brandlogo.fa.fa-paper-plane(aria-hidden='true')
            |  Friendly Stuff
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='#')
                span(style='font-weight:bold') Home
            li
              a(href='#') About
            li
              a(href='#') Contact
          ul.nav.navbar-nav.navbar-right
            li
              a#signup.btn.btn-info.btn-lg.nav-user(href='/signup')
                | Sign Up
                span.glyphicon.glyphicon-plus.glyph(aria-hidden='true')
            li
              a(href='#')
              button#login.btn.btn-success.btn-lg.nav-user
                | Login
                span.glyphicon.glyphicon-user.glyph(aria-hidden='true')

    block content

    script(src='https://code.jquery.com/jquery-3.1.1.min.js', integrity='sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=', crossorigin='anonymous')
    script(type='text/javascript', src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    != js("main")
