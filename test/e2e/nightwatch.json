{
  "src_folders" : ["test/e2e/test"],
  "output_folder" : "test/e2e/reports",
  "custom_commands_path" : "",
  "custom_assertions_path" : "",
  "page_objects_path" : "",
  "globals_path" : "",

  "selenium" : {
    "start_process" : true,
    "server_path" : "test/e2e/lib/selenium-server/2.53.1-server.jar",
    "log_path" : "test/e2e/reports",
    "host" : "127.0.0.1",
    "port" : 4444,
    "cli_args": {
      "webdriver.chrome.driver" : "test/e2e/lib/chromedriver/2.9-x64-chromedriver"
    }
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://localhost:4000",
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "silent": true,
      "screenshots" : {
        "enabled" : false,
        "path" : "test/screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "phantomjs": {
      "desiredCapabilities" : {
        "browserName" : "phantomjs",
        "javascriptEnabled" : true,
        "acceptSslCerts" : true,
        "phantomjs.binary.path" : "node_modules/.bin/phantomjs",
        "phantomjs.cli.args" : ["--ignore-ssl-errors=true"]
      }
    }
  }
}
