{
  "src_folders" : ["./test/e2e/test"],
  "output_folder" : "./test/e2e/reports",

  "selenium" : {
    "start_process" : true,
    "server_path" : "./test/e2e/lib/selenium.jar",
    "log_path" : "./test/e2e/reports",
    "host" : "127.0.0.1",
    "port" : 4444,
    "cli_args": {
      "webdriver.chrome.driver" : "./test/e2e/lib/chromedriver"
    }
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "http://localhost:3000",
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "silent": true,
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "chrome" : {
      "desiredCapabilities" : {
        "browserName" : "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions" : {
          "args" : [
            "use-fake-device-for-media-stream", 
            "use-fake-ui-for-media-stream"
          ]
        }
      }
    }
  }
}
