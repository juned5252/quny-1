// Colors
$navbar_color = #FFFFFF
$cuny_blue = #0275d8

// Style to apply on buttons
popout()
  background-image: linear-gradient(
    to bottom,
    rgba(255, 255, 255, .2),
    rgba(0, 0, 0, .05))
  border: 1px solid rgba(0, 0, 0, .15)
  box-shadow:
    inset 0 0 0 1px rgba(255, 255, 255, .07),
    inset 0 1px 0 0 rgba(255, 255, 255, .3),
    inset 0 -1px 0 0 rgba(255, 255, 255, .1),
    0 1px 3px rgba(0, 0, 0, .12),
    0 1px 2px rgba(0, 0, 0, .24)

button
a.btn
input.btn
  popout()

body
  font-family: sans-serif

/*
* Navbar
*/
nav.navbar
  border-radius: 0
  background-color: $navbar_color
  a.navbar-brand
    color: black
    font-weight: bold
    span#queue
      color: $cuny_blue
  .navbar-light
  .navbar-brand
    color: white
    &:hover
      color: black

/*
* Footer
*/
footer
  text-align: center
  bottom: 10px
  height: 50px
  left: 0
  position: absolute
  right: 0
  color: white