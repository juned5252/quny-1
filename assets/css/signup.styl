body
    background-image url(http://millo.co/wp-content/uploads/2015/10/why-time-management-is-not-the-problem.jpg)
    background-size cover
    background-repeat no-repeat
    background-position center
    font-family 'Lato', sans-serif
    font-weight bold
    color white
    margin-top 2px
    height 100%

#brandlogo
    padding-right 3px

#brand
    font-weight bold
    color #CC2828

#bs-example-navbar-collapse-1
    font-weight bold

.form-control
    height 40px
    padding 15px
    font-size 16px
    color #8c8c8c
    background-color #f5f5f5
    border 1px solid #d1d1d1
    box-shadow none
    font-weight 300
    margin-top 8px
    &:focus
        box-shadow none
        color #793a93
        border-color #793a93
        &::-moz-placeholder
            color #793a93
        &::-ms-input-placeholder
            color #793a93
        &::-webkit-input-placeholder
            color #793a93
    &::-moz-placeholder
        color #8c8c8c
    &::-ms-input-placeholder
        color #8c8c8c
    &::-webkit-input-placeholder
        color #8c8c8c

#contact
    margin-top 200px
    align-content center

#plane
    padding 20px 0 20px 0
    margin-left 180px
    text-shadow 0px 4px 3px rgba(0,0,0,0.4),
                 0px 8px 13px rgba(0,0,0,0.1),
                 0px 18px 23px rgba(0,0,0,0.1)

    #start
        text-shadow 0px 4px 3px rgba(0,0,0,0.4),
                 0px 8px 13px rgba(0,0,0,0.1),
                 0px 18px 23px rgba(0,0,0,0.1)

#getstarted
    border-color transparent
    background-color #32C132
    text-shadow 0px 4px 3px rgba(0,0,0,0.4),
                 0px 8px 13px rgba(0,0,0,0.1),
                 0px 18px 23px rgba(0,0,0,0.1)

.support h1,p
    font-weight 700
    font-size 50px
    text-align center
    position relative
    padding-top 150px
    text-shadow 0px 4px 3px rgba(0,0,0,0.4),
                 0px 8px 13px rgba(0,0,0,0.1),
                 0px 18px 23px rgba(0,0,0,0.1)

.support
    p
        font-size 30px
        padding-top 10px

.vertical-align
    position relative
    top 35%
    transform translateY(-40%)

.copyrights
    text-align center
    font-size 12px
    padding-top 140px
    font-weight bold